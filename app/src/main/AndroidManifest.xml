<?xml version="1.0" encoding="utf-8"?>
<manifest package="cn.marco.meizhi"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".GankApplication">
        <activity
            android:name=".module.home.HomeActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppBaseTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".module.meizhi.MeizhiActivity"
            android:theme="@style/SwipeBackTheme"/>
        <activity
            android:name=".module.other.PictureActivity"
            android:theme="@style/SwipeBackTheme"/>
        <activity
            android:name=".module.category.CategoryActivity"
            android:label="@string/aty_category_title"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/SwipeBackTheme"/>
        <activity
            android:name=".module.other.WebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/SwipeBackTheme"/>
        <activity
            android:name=".module.vedio.VideoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/SwipeBackTheme"/>
        <activity
            android:name=".module.other.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBackTheme"/>
    </application>

</manifest>
